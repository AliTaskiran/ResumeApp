@section Scripts {
    <script>
        function toggleChat() {
            const modal = document.getElementById('chatModal');
            modal.classList.toggle('hidden');
        }

        function appendMessage(message, isBot) {
            const chatMessages = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'flex items-start';

            const iconDiv = document.createElement('div');
            iconDiv.className = 'flex-shrink-0';
            iconDiv.innerHTML = `
                <div class="w-8 h-8 rounded-full ${isBot ? 'bg-blue-500' : 'bg-gray-500'} flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="${isBot ? 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' : 'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z'}" />
                    </svg>
                </div>
            `;

            const messageContent = document.createElement('div');
            messageContent.className = `ml-3 ${isBot ? 'bg-gray-100' : 'bg-blue-50'} rounded-lg py-2 px-4 max-w-[80%]`;
            messageContent.innerHTML = `<p class="text-sm text-gray-900">${message}</p>`;

            messageDiv.appendChild(isBot ? iconDiv : messageContent);
            messageDiv.appendChild(isBot ? messageContent : iconDiv);
            
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        async function sendMessage() {
            const messageInput = document.getElementById('messageInput');
            const message = messageInput.value.trim();
            
            if (!message) {
                return;
            }

            try {
                // Input'u temizle
                messageInput.value = '';

                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                const response = await fetch('/Home/SendMessage', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({
                        content: message,
                        __RequestVerificationToken: token
                    })
                });

                const data = await response.json();
                
                if (data.success) {
                    // Veritabanƒ±ndan t√ºm mesajlarƒ± yeniden y√ºkle
                    setTimeout(() => {
                        loadChatMessages();
                    }, 200); // Kƒ±sa bir delay ile veritabanƒ±na kayƒ±t tamamlanana kadar bekle
                } else {
                    appendMessage('√úzg√ºn√ºm, bir hata olu≈ütu: ' + (data.error || 'Bilinmeyen hata'), true);
                }
            } catch (error) {
                console.error('Error:', error);
                appendMessage('√úzg√ºn√ºm, bir hata olu≈ütu. L√ºtfen tekrar deneyin.', true);
            }
        }

        // Global fonksiyon - diƒüer sayfalardan √ßaƒürƒ±labilir
        function updateChatMessages() {
            // Sohbet mesajlarƒ±nƒ± yenile
            loadChatMessages();
        }

        async function loadChatMessages() {
            try {
                const response = await fetch('/Home/GetChatMessages');
                if (response.ok) {
                    const data = await response.json();
                    const chatMessages = document.getElementById('chatMessages');
                    
                    // Mevcut mesajlarƒ± temizle (ilk mesaj hari√ß)
                    const firstMessage = chatMessages.firstElementChild;
                    chatMessages.innerHTML = '';
                    chatMessages.appendChild(firstMessage);
                    
                    // Yeni mesajlarƒ± ekle
                    if (data.messages && data.messages.length > 0) {
                        data.messages.forEach(message => {
                            appendMessage(message.content, message.isFromBot);
                        });
                    }
                }
            } catch (error) {
                console.error('Mesajlar y√ºklenirken hata:', error);
            }
        }

        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            // Mevcut mesajlarƒ± y√ºkle
            loadChatMessages();
            
            // URL parametresini kontrol et
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('openChat') === 'true') {
                // Sohbeti otomatik a√ß
                setTimeout(() => {
                    toggleChat();
                }, 500);
            }
            
            const messageInput = document.getElementById('messageInput');
            const sendButton = document.getElementById('sendButton');

            if (messageInput) {
                messageInput.addEventListener('keypress', function(event) {
                    if (event.key === 'Enter') {
                        event.preventDefault();
                        sendMessage();
                    }
                });
            }

            if (sendButton) {
                sendButton.addEventListener('click', function(event) {
                    event.preventDefault();
                    sendMessage();
                });
            }
        });
    </script>
}

