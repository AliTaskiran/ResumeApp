@model EntityLayer.JobPosting
@{
    ViewData["Title"] = "Yeni İş İlanı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50">
    <div class="py-10">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="md:flex md:items-center md:justify-between mb-8">
                <div class="flex-1 min-w-0">
                    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                        Yeni İş İlanı Oluştur
                    </h2>
                    <p class="mt-1 text-sm text-gray-500">
                        Şirketiniz için yeni bir iş ilanı oluşturun ve adaylara ulaşın.
                    </p>
                </div>
                <div class="mt-4 flex md:mt-0 md:ml-4">
                    <a href="@Url.Action("JobPostings", "Employer")" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Geri Dön
                    </a>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="mb-4 bg-green-50 border border-green-200 rounded-md p-4">
                    <div class="text-sm text-green-600">
                        @TempData["SuccessMessage"]
                    </div>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="mb-4 bg-red-50 border border-red-200 rounded-md p-4">
                    <div class="text-sm text-red-600">
                        @TempData["ErrorMessage"]
                    </div>
                </div>
            }

            <div class="bg-white shadow rounded-lg">
                <form asp-action="CreateJobPosting" method="post" class="space-y-6 p-6">
                    @if (ViewData.ModelState.Count > 0)
                    {
                        <div class="bg-red-50 border border-red-200 rounded-md p-4">
                            <div class="text-sm text-red-600">
                                @Html.ValidationSummary(false, "", new { @class = "text-red-600" })
                            </div>
                        </div>
                    }

                    <!-- İş İlanı Başlığı -->
                    <div>
                        <label asp-for="Title" class="block text-sm font-medium text-gray-700">İş İlanı Başlığı</label>
                        <input asp-for="Title" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Örn: Senior Frontend Developer" required>
                        <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- İş Tanımı -->
                    <div>
                        <label asp-for="Description" class="block text-sm font-medium text-gray-700">İş Tanımı</label>
                        <textarea asp-for="Description" rows="6" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="İş tanımını detaylı olarak açıklayın..." required></textarea>
                        <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Gerekli Yetenekler -->
                    <div>
                        <label asp-for="RequiredSkills" class="block text-sm font-medium text-gray-700">Gerekli Yetenekler</label>
                        <input asp-for="RequiredSkills" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Örn: JavaScript, React, Node.js, MongoDB (virgülle ayırın)" required>
                        <p class="mt-1 text-sm text-gray-500">Yetenekleri virgül ile ayırarak yazın</p>
                        <span asp-validation-for="RequiredSkills" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Lokasyon ve Çalışma Tipi -->
                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                        <div>
                            <label asp-for="Location" class="block text-sm font-medium text-gray-700">Lokasyon</label>
                            <input asp-for="Location" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Örn: İstanbul, Türkiye">
                            <span asp-validation-for="Location" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="EmploymentType" class="block text-sm font-medium text-gray-700">Çalışma Tipi</label>
                            <select asp-for="EmploymentType" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                                <option value="">Seçiniz</option>
                                <option value="Tam Zamanlı">Tam Zamanlı</option>
                                <option value="Yarı Zamanlı">Yarı Zamanlı</option>
                                <option value="Proje Bazlı">Proje Bazlı</option>
                                <option value="Stajyer">Stajyer</option>
                                <option value="Freelance">Freelance</option>
                            </select>
                            <span asp-validation-for="EmploymentType" class="text-red-600 text-sm"></span>
                        </div>
                    </div>

                    <!-- Deneyim ve Maaş -->
                    <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
                        <div>
                            <label asp-for="RequiredExperience" class="block text-sm font-medium text-gray-700">Gerekli Deneyim (Yıl)</label>
                            <input asp-for="RequiredExperience" type="number" min="0" max="30" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="0">
                            <span asp-validation-for="RequiredExperience" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="SalaryMin" class="block text-sm font-medium text-gray-700">Minimum Maaş (TL)</label>
                            <input asp-for="SalaryMin" type="number" min="0" step="500" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="15000">
                            <span asp-validation-for="SalaryMin" class="text-red-600 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="SalaryMax" class="block text-sm font-medium text-gray-700">Maksimum Maaş (TL)</label>
                            <input asp-for="SalaryMax" type="number" min="0" step="500" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="25000">
                            <span asp-validation-for="SalaryMax" class="text-red-600 text-sm"></span>
                        </div>
                    </div>

                    <!-- Uzaktan Çalışma -->
                    <div class="flex items-center">
                        <input asp-for="IsRemote" type="checkbox" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                        <label asp-for="IsRemote" class="ml-2 block text-sm text-gray-900">
                            Uzaktan çalışma imkanı var
                        </label>
                    </div>

                    <!-- Son Başvuru Tarihi -->
                    <div>
                        <label asp-for="ExpiryDate" class="block text-sm font-medium text-gray-700">Son Başvuru Tarihi</label>
                        <input asp-for="ExpiryDate" type="date" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                        <p class="mt-1 text-sm text-gray-500">Boş bırakılırsa 30 gün sonra otomatik kapanır</p>
                        <span asp-validation-for="ExpiryDate" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Butonlar -->
                    <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
                        <a href="@Url.Action("JobPostings", "Employer")" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            İptal
                        </a>
                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            İş İlanı Oluştur
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Maaş validasyonu
        document.getElementById('SalaryMax').addEventListener('input', function() {
            const minSalary = parseFloat(document.getElementById('SalaryMin').value) || 0;
            const maxSalary = parseFloat(this.value) || 0;
            
            if (maxSalary > 0 && minSalary > 0 && maxSalary < minSalary) {
                this.setCustomValidity('Maksimum maaş minimum maaştan az olamaz');
            } else {
                this.setCustomValidity('');
            }
        });

        // Son başvuru tarihi default değeri (30 gün sonra)
        document.addEventListener('DOMContentLoaded', function() {
            const expiryDate = document.getElementById('ExpiryDate');
            if (!expiryDate.value) {
                const today = new Date();
                today.setDate(today.getDate() + 30);
                expiryDate.value = today.toISOString().split('T')[0];
            }
        });
    </script>
} 