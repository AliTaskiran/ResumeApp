<!-- Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResumeApp</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-50">
    @Html.AntiForgeryToken()
    
    <!-- Sidebar -->
    <div class="fixed inset-y-0 left-0 w-64 bg-white shadow-lg z-10">
        <div class="flex flex-col h-full">
            <!-- Logo -->
            <div class="flex items-center justify-center h-16 border-b">
                <a href="/" class="text-xl font-bold text-blue-600">ResumeApp</a>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 px-4 py-4 space-y-1">
                @if (User.IsInRole("Employer"))
                {
                    <a href="@Url.Action("Dashboard", "Employer")" 
                       class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg @((Context.Request.RouteValues["Controller"]?.ToString() == "Employer") ? "bg-blue-50 text-blue-600" : "")">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        Dashboard
                    </a>

                    <a href="@Url.Action("Applications", "Employer")"
                       class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg @((Context.Request.RouteValues["Action"]?.ToString() == "Applications") ? "bg-blue-50 text-blue-600" : "")">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        Başvurular
                    </a>

                    <a href="@Url.Action("JobPostings", "Employer")"
                       class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg @((Context.Request.RouteValues["Action"]?.ToString() == "JobPostings") ? "bg-blue-50 text-blue-600" : "")">
                        <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H5m0 0h2M7 7h10M7 11h10M7 15h10" />
                        </svg>
                        İş İlanları
                    </a>
                }
                else
                {
                <a href="@Url.Action("Index", "Home")" 
                   class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg @((Context.Request.RouteValues["Controller"]?.ToString() == "Home") ? "bg-blue-50 text-blue-600" : "")">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                    Ana Sayfa
                </a>

                <a href="@Url.Action("Index", "Resume")"
                   class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg @((Context.Request.RouteValues["Controller"]?.ToString() == "Resume") ? "bg-blue-50 text-blue-600" : "")">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    CV'lerim
                </a>

                <a href="@Url.Action("Index", "JobPosting")"
                   class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg @((Context.Request.RouteValues["Controller"]?.ToString() == "JobPosting") ? "bg-blue-50 text-blue-600" : "")">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    İş İlanları
                </a>

                <a href="@Url.Action("Chat", "Home")" 
                   class="w-full flex items-center px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                    </svg>
                    CV Asistanı
                </a>
                }
            </nav>

            <!-- User Info -->
            <div class="p-4 border-t">
                <div class="flex items-center justify-between">
                    <div class="flex items-center flex-1">
                    <div class="w-8 h-8 rounded-full bg-blue-500 flex items-center justify-center text-white font-semibold">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @User.Identity.Name?.Substring(0, 1).ToUpper()
                            }
                            else
                            {
                                @("U")
                            }
                        </div>
                        <div class="ml-3 flex-1">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <p class="text-sm font-medium text-gray-700">@User.Identity.Name</p>
                                <p class="text-xs text-gray-500">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</p>
                                @if (User.IsInRole("Employer"))
                                {
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 mt-1">
                                        İşveren
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 mt-1">
                                        Aday
                                    </span>
                                }
                            }
                            else
                            {
                                <p class="text-sm font-medium text-gray-700">Misafir</p>
                                <p class="text-xs text-gray-500">Giriş yapılmadı</p>
                            }
                    </div>
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("Logout", "Login")" 
                           class="ml-2 p-2 text-gray-400 hover:text-red-600 transition-colors"
                           title="Çıkış Yap">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                            </svg>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="ml-64">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Eski chat fonksiyonları kaldırıldı - artık ayrı Chat sayfası kullanılıyor
        console.log('Layout yüklendi - Chat sayfası için ayrı endpoint kullanılıyor');
    </script>
</body>
</html>